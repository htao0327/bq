<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    >

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            >
            <ImageView
                android:layout_width="12dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:src="@drawable/back_blank"
                android:scaleType="fitXY"
                />

        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:textColor="#212121"
            android:text="实名认证"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textColor="#ff484848"
                    android:textSize="16sp"
                    />
                <EditText
                    android:layout_marginLeft="10dp"
                    android:id="@+id/et_name"
                    android:maxLength="8"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="输入真实姓名"
                    android:textColor="#ff484848"
                    android:textSize="16sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证"
                    android:textColor="#ff484848"
                    android:textSize="16sp"
                    />
                <EditText
                    android:layout_marginLeft="10dp"
                    android:id="@+id/et_id"
                    android:maxLength="8"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="输入身份证号码"
                    android:textColor="#ff484848"
                    android:textSize="16sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证拍照"
                    android:textColor="#ff484848"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请保持拍照后身份证清晰可见"
                    android:textColor="@color/colorLoginEditHint"
                    android:textSize="12sp"
                    />
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:id="@+id/id_card_1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="114dp"
                        android:src="@drawable/id_card_1"
                        />
                    <ImageView
                        android:id="@+id/id_card_2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="114dp"
                        android:src="@drawable/id_card_2"
                        />
                </LinearLayout>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手持证件照"
                    android:textColor="#ff484848"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请手持身份证拍照并上传"
                    android:textColor="@color/colorLoginEditHint"
                    android:textSize="12sp"
                    />
                <ImageView
                    android:layout_marginTop="10dp"
                    android:id="@+id/id_card_3"
                    android:layout_width="180dp"
                    android:layout_weight="1"
                    android:layout_height="114dp"
                    android:src="@drawable/id_card_2"
                    />

            </LinearLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请慎重，身份证一经上传后不可修改"
                android:textColor="#ff999999"
                android:textSize="12sp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:minWidth="300dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_bg_deal_check_ok_click"
                android:text="提交"
                android:textColor="#ffffffff"
                android:textSize="16sp"

                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>