<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    >

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            >
            <ImageView
                android:layout_width="12dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:src="@drawable/back_blank"
                android:scaleType="fitXY"
                />

        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:textColor="#212121"
            android:text="币友打赏"
            />
    </RelativeLayout>

    <RelativeLayout
        android:paddingBottom="10dp"
        android:paddingStart="16dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        >
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="每日一赏"
            android:textColor="#ff484848"
            android:textSize="14sp"
            />
        <LinearLayout
            android:layout_below="@id/tv_content"
            android:id="@+id/ll_center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共"
                android:textColor="#ff484848"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/tv_money"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共"
                android:textColor="@color/read_dot_bg"
                android:textSize="22sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Q豆"
                android:textColor="#ff484848"
                android:textSize="14sp"
                />
        </LinearLayout>

        <com.sy.biquan.viewutil.CircleImageView
            android:id="@+id/civ_user_img"
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:layout_below="@id/ll_center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/test_img"
            />
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/civ_user_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="大咖陈陈的打赏"
            android:textColor="#ff767676"
            android:textSize="12sp"
            />

        <TextView
            android:layout_alignParentBottom="true"
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1个打赏，已过期"
            android:textColor="#ff484848"
            android:textSize="12sp"
            />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rcy"
        />


</LinearLayout>