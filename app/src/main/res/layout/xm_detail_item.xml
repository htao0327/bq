<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <com.sy.biquan.viewutil.CircleImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/test_img"
            android:id="@+id/civ_xm_detail_group_img"
            />
        <TextView
            android:id="@+id/tv_xm_group_list_name"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BTC交流1号群"
            android:textColor="#ff484848"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tv_xm_group_list_people_count"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="(999+)"
            android:layout_marginStart="5dp"
            android:textColor="#ff999999"
            android:textSize="12sp"
            />

        <Button
            android:id="@+id/btn_xm_group"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:background="@drawable/kt_btn_bg"
            android:layout_gravity="center_vertical"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:text="立即加群"
            />

    </LinearLayout>

</LinearLayout>