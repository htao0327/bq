<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/white"
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        >
        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            >
            <ImageView
                android:layout_width="12sp"
                android:layout_height="18sp"
                android:layout_centerInParent="true"
                android:src="@drawable/black_back"
                android:scaleType="fitXY"
                />

        </RelativeLayout>
        <EditText
            android:id="@+id/et_search"
            android:hint="请输入搜索内容"
            android:textSize="14sp"
            android:textColorHint="@color/colorLoginEditHint"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:minHeight="36dp"
            android:background="@drawable/main_search_bg"
            android:drawableStart="@drawable/search"
            android:drawablePadding="5dp"
            />
        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_height="wrap_content"
            android:minHeight="44dp"
            android:text="搜索"
            android:textColor="@color/colorLoginTitle"
            android:textSize="16sp"
            android:background="@null"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:visibility="visible"
        android:layout_below="@id/ll_title"
        android:id="@+id/ll_search_hot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="6dp"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorLoginTitle"
            android:text="热门搜索"
            />
        <com.sy.biquan.viewutil.MyViewGroup
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vg_search_hot"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_title"
        >

        <LinearLayout
            android:id="@+id/ll_search_list"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingTop="16dp"
            >

            <TextView
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorLoginTitle"
                android:text="热门搜索"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/person_recycler"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="#F2F2F2"
                />
            <TextView
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorLoginTitle"
                android:text="热门搜索"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>