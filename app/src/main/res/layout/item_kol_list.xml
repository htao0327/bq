<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="16dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/tv_kol_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="16dp"
            android:text="大伽蒙蒙的召唤"
            android:textColor="#ff484848"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击查看>>"
            android:textColor="#ff4a90e2"
            android:textSize="14sp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/line"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <com.sy.biquan.viewutil.CircleImageView
            android:id="@+id/civ_kol_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/test_img"
            />
        <TextView
            android:id="@+id/tv_kol_content"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="来啦，老弟~ 这次是来真的啦这次是来真的啦这次是这次是来真的啦…"
            android:textColor="#ff909090"
            android:textSize="14sp"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:paddingTop="10dp"
        >
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_toStartOf="@id/time"
            android:src="@drawable/time_clock"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            />
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/time"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-9-14 12:20:00"
            android:textColor="#ffb4b4b4"
            android:textSize="12sp"
            />

    </RelativeLayout>

</LinearLayout>