<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        >
        <com.sy.biquan.viewutil.CircleImageView
            android:id="@+id/cv_user_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/test_img"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#212121"
            android:layout_marginStart="12dp"
            android:text="专注场外交易的小白"
            />
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#FF5A5F"
            android:layout_marginStart="12dp"
            android:text="待确认"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/line"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="82dp"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <Button
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/deal_null_btn_bg"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="BTC"
            />
        <RelativeLayout
            android:layout_marginStart="12dp"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            >
            <TextView
                android:id="@+id/tv_deal_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorLoginTitle"
                android:textSize="16sp"
                android:text="BTC的第一次召唤"
                />
            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交易数量："
                    android:textColor="#ff484848"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/tv_deal_counts"
                    android:textStyle="bold"
                    android:layout_marginStart="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textColor="#ff484848"
                    android:textSize="16sp"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/line"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应付:"
            android:textColor="#ff727272"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tv_payment"
            android:layout_marginStart="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="$100"
            android:textColor="#ffff5a5f"
            android:textSize="14sp"
            />
        <Button
            android:id="@+id/btn_deal_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="24dp"
            android:minWidth="68dp"
            android:background="@drawable/btn_bg_cancle_deal"
            android:text="取消交易"
            android:textColor="#484848"
            android:textSize="12sp"
            />

        <Button
            android:id="@+id/btn_deal_ok"
            android:layout_marginStart="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="24dp"
            android:minWidth="68dp"
            android:background="@drawable/btn_bg_deal_ok"
            android:text="确认交易"
            android:textColor="@color/white"
            android:textSize="12sp"
            />


    </LinearLayout>

</LinearLayout>