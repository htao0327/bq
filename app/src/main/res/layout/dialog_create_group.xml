<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_dialog_title"
            android:gravity="center"
            android:minWidth="210dp"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dip"
                android:textColor="@color/colorLoginTitle"
                android:textSize="18sp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:visibility="visible"
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_dialog_content"
            android:gravity="center"
            android:minHeight="80dip"
            android:minWidth="210dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dip"
                android:clickable="true"
                android:focusable="true"
                android:paddingBottom="10dp"
                android:textSize="14sp"
                android:textColor="#ff767676"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height=".4dp"
            android:background="#848484"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_dialog_button"
            android:minWidth="210dp"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/positiveButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:textSize="18sp"
                android:textColor="#ff767676"/>
            <View
                android:layout_width=".4dp"
                android:layout_height="match_parent"
                android:background="#848484"
                />
            <Button
                android:id="@+id/negativeButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:textSize="18sp"
                android:textColor="@color/colorLoginBtn"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>