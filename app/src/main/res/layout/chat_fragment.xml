<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/add"
        android:scaleType="fitXY"
        android:layout_marginTop="16dp"
        android:layout_gravity="end"
        android:layout_marginRight="16dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textColor="#212121"
        android:layout_marginStart="16dp"
        android:text="群聊"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:layout_marginTop="15dp"
        android:id="@+id/et_search"
        android:hint="请输入搜索内容"
        android:textSize="14sp"
        android:textColorHint="@color/colorLoginEditHint"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/main_search_bg"
        android:drawableStart="@drawable/search"
        android:drawablePadding="5dp"
        />

    <LinearLayout

        android:layout_margin="16dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/iv_cfmm"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/sm_msg"
                />
            <TextView
                android:id="@+id/tv_cfmm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="KOL召唤"
                android:textColor="@color/color_main_icon_text"
                android:textSize="14sp"
                />
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/iv_jb"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/new_kt_msg"
                />
            <TextView
                android:id="@+id/tv_jb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/kt_msg"
                android:textColor="@color/color_main_icon_text"
                android:textSize="14sp"
                />
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/iv_kt"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/system_msg"
                />
            <TextView
                android:id="@+id/tv_kt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/system_msg"
                android:textColor="@color/color_main_icon_text"
                android:textSize="14sp"
                />
        </LinearLayout>

    </LinearLayout>
    <com.tencent.qcloud.tim.uikit.modules.conversation.ConversationLayout
        android:id="@+id/conversation_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>