<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_dialog_title"
            android:gravity="center"
            android:minWidth="210dp"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <com.sy.biquan.viewutil.CircleImageView
                android:src="@drawable/img_test"
                android:id="@+id/icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                />

            <TextView
                android:layout_marginTop="10dp"
                android:text="圆圆"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorLoginTitle"
                android:textSize="16sp"/>
            <TextView
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dip"
                android:textColor="@color/colorLoginTitle"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:visibility="visible"
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_dialog_content"
            android:gravity="center"
            android:minHeight="80dip"
            android:minWidth="210dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="24dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:textColor="#767676"
                android:focusable="true"
                android:paddingBottom="10dp"
                android:textSize="12sp"

                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    >
                    <TextView
                        android:id="@+id/tv_fans_counts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#565A5C"
                        android:textSize="16sp"
                        android:text="8877"
                        />
                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#909090"
                        android:text="粉丝"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    >
                    <TextView
                        android:id="@+id/tv_sy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#03A56B"
                        android:textSize="16sp"
                        android:text="12%"
                        />
                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#909090"
                        android:text="平均收益率"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    >
                    <TextView
                        android:id="@+id/tv_sr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#03A56B"
                        android:textSize="16sp"
                        android:text="99.0"
                        />
                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#909090"
                        android:text="收入"
                        />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height=".4dp"
            android:background="#848484"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_dialog_button"
            android:minWidth="210dp"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/positiveButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="@color/colorLoginBtn"/>
            <View
                android:layout_width=".4dp"
                android:layout_height="match_parent"
                android:background="#848484"
                />
            <Button
                android:id="@+id/negativeButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="@color/colorLoginBtn"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>